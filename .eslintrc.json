{
  "extends": [
    "react-app",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "jsx-a11y",
    "prettier"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ],
        "paths": [
          "src"
        ]
      }
    }
  },
  "rules": {
    "semi": 0,
    "react/prop-types": 0,
    "react-hooks/exhaustive-deps": 0,
    "react/jsx-props-no-spreading": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          "tsx"
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "htmlWhitespaceSensitivity": "ignore",
        "trailingComma": "es5"
      }
    ]
  }
}